<html>
    <head>
        <%- include('../partials/head') %>
        <Title>Day</Title>
    </head>
    <body>
        <header>
            <%- include('../partials/header') %>
        </header>
            <h3 id="hvn"></h3>
            <script>
                var today = new Date();
                var day = today.getDay();
                if(day == 0)
                {
                    document.getElementById("hvn").innerHTML = "Today is Sunday";
                }
                else if(day == 1)
                {
                    document.getElementById("hvn").innerHTML = "Today is Monday";
                }
                else if(day == 2)
                {
                    document.getElementById("hvn").innerHTML = "Today is Tuesday";
                }
                else if(day == 3)
                {
                    document.getElementById("hvn").innerHTML = "Today is Wednesday";
                }
                else if(day == 4)
                {
                    document.getElementById("hvn").innerHTML = "Today is Thursday";
                }
                else if(day == 5)
                {
                    document.getElementById("hvn").innerHTML = "Today is Friday";
                }
                else if(day == 6)
                {
                    document.getElementById("hvn").innerHTML = "Today is Saturday";
                }               
            </script>
        <footer>
            <%- include('../partials/footer') %>
        </footer>
    </body>
</html>